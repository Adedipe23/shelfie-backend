[flake8]
max-line-length = 88
extend-ignore = E203,W503,E402,F811,F841,E501
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    migrations,
    .pytest_cache
per-file-ignores =
    tests/*:F811,F841
    */conftest.py:E402,F811
    */settings.py:E402
    */__init__.py:F401
